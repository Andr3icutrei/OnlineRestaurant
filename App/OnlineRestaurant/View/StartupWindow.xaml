<Window x:Class="OnlineRestaurant.UI.View.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineRestaurant.UI.View"
        xmlns:vm="clr-namespace:OnlineRestaurant.UI.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="500">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Resources/PapasButtonStyle.xaml"/>
                <ResourceDictionary Source="/View/Resources/Background.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource PizzaContentPanelStyle}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image Source="/Images/logo.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="150"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding LoginAsGuestCommand}" Style="{StaticResource LogoButtonStyle}" Content="Login as Guest" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="167"/>
                <Button Grid.Column="1" Command="{Binding RegisterCommand}" Style="{StaticResource ChefHatButtonStyle}" Content="Register"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="167"/>
            </Grid>
            <Button Command="{Binding LoginAsUserCommand}" Style="{StaticResource PizzaButtonStyle}"  Grid.Row="1" Content="Login as User" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="134"/>
            <Button Command="{Binding LoginAsAdminCommand}" Style="{StaticResource PepperoniButtonStyle}" Grid.Row="2" Content="Login as Admin" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="134"/>
        </Grid>

    </Grid>
</Window>
